{% extends 'base.html.twig' %}

{% block body %}
	<section class="page_breadcrumbs cs gradient lightened section_padding_50">
		<div class="container">
			<div class="row">
				<div class="col-xs-12 text-center">
					<h1>Détail Carte</h1>
					<ol class="breadcrumb darklinks">
						<li>
							<a href="/">Accueil</a>
						</li>
						<li>
							<a href="{{path('app_modeles')}}">Modèles de carte</a>
						</li>
						<li class="active">
							<span>Détails</span>
						</li>
					</ol>
				</div>
			</div>
		</div>
	</section>
	<section class="ls section_padding_top_150 section_padding_bottom_150 columns_padding_30">
		<div class="container">
			<div class="row">
				<div class="col-xs-12 col-md-8 col-lg-8 col-md-push-4 col-lg-push-4">
					<div itemscope="" itemtype="http://schema.org/Product" class="product type-product row columns_padding_30 columns_margin_bottom_30">
						<div class="col-sm-12">
							<div class="images text-center">
								<a href="{{ asset('/assets/img/templatesCartes/' ~ template.photoCouvertures ) }}" itemprop="image" class="woocommerce-main-image zoom prettyPhoto" data-gal="prettyPhoto[product-gallery]">
									<img src="{{ asset('/assets/img/templatesCartes/' ~ template.photoCouvertures ) }}" class="attachment-shop_single wp-post-image" alt="" title="">
								</a>
							</div>
							<!--eof .images -->
							<div class="thumbnails-wrap">
								<div id="product-thumbnails" class="owl-carousel thumbnails product-thumbnails" data-margin="10" data-nav="false" data-dots="true" data-responsive-lg="4" data-responsive-md="4" data-responsive-sm="3" data-responsive-xs="2" data-responsive-xxs="2">
									{% for tempImg in template.getTemplateImages %}
										<a href="{{ asset('/assets/img/templatesCartes/' ~ tempImg.images ) }}" class="zoom first" title="{{template.titres}}" data-gal="prettyPhoto[product-gallery]">
											<img src="{{ asset('/assets/img/templatesCartes/' ~ tempImg.images ) }}" class="attachment-shop_thumbnail" alt="">
										</a>
									{% endfor %}

								</div>
							</div>
							<!-- eof .images -->
						</div>
						<div class="summary entry-summary col-sm-12">
							<h1 itemprop="name" class="product_title">{{ template.titres }}</h1>
							<div class="product-rating">
								<span class="review-links pull-right greylinks">
									<a href="#reviews" class="review-link">
										(<span class="count">5</span>
										customer review)
									</a>
								</span>
								<div class="star-rating">
									<span style="width:80%">
										Rated
										<strong class="rating">4.00</strong>
										out of 5 based on
										<span class="rating">5</span>
										customer rating
									</span>
								</div>
							</div>
							{% if not app.request.get('espace') %}
							<h5 class="fa fa-hourglass-2" aria-hidden="true">Quantité minimum: 50</h5>
							<span class="price">
								<span class="amount">
									{{template.price * 50}} XOF
								</span>
							</span>
							{% endif %}
							<div class="short-description">
								<p>{{ template.descriptions }}.</p>
							</div>

							<div class="product_meta highlightlinks">
								<ul class="list1 feature-list bottommargin_0">
									<li>
										<span class="grey">{{ template.titres }}:</span>
										<a href="#">{{ template.types }}</a>
									</li>
									<li>
										<span class="grey">Tag:</span>
										<a href="#">Engineering</a>
									</li>
								</ul>
							</div>
						</div>
						<!-- .summary.col- -->
					</div>

					<div class="related-products">
						<h2>Related Products</h2>
						<div class="owl-carousel with_shadow_items" data-dots="false" data-nav="true" data-loop="true" data-autoplay="true" data-responsive-lg="2" data-responsive-md="2">
							<div class="with-corner-label">
								<article class="vertical-item content-padding big-padding with_shadow text-center">
									<div class="item-media-wrap">
										<div class="item-media">
											<a href="shop-product.html"><img src="{{domaine}}/util/images/shop/02.jpg" alt=""/></a>
										</div>
										<div class="corner-label sale">sale</div>
									</div>
									<div class="item-content">
										<h3 class="entry-title">
											<a href="shop-product.html">Hoodie</a>
										</h3>
										<div class="star-rating" title="Rated 5.0 out of 5">
											<span style="width:100%">
												<strong class="rating">5.0</strong>
												out of 5
											</span>
										</div>
										<div class="price">
											<del>
												<span class="amount">$120.00</span>
											</del>
											<ins>
												<span class="amount">$100.00</span>
											</ins>
										</div>
										<p class="topmargin_20">
											<a href="#" class="theme_button block_button add_to_cart">Add to cart</a>
										</p>
									</div>
								</article>
							</div>
							<article class="vertical-item content-padding big-padding with_shadow text-center">
								<div class="item-media-wrap">
									<div class="item-media">
										<a href="shop-product.html"><img src="{{domaine}}/util/images/shop/03.jpg" alt=""/></a>
									</div>
								</div>
								<div class="item-content">
									<h3 class="entry-title">
										<a href="shop-product.html">Hoodie with Logo</a>
									</h3>
									<div class="star-rating" title="Rated 4.0 out of 5">
										<span style="width:80%">
											<strong class="rating">4.0</strong>
											out of 5
										</span>
									</div>
									<div class="price">
										<span class="amount">$120.00</span>
									</div>
									<p class="topmargin_20">
										<a href="#" class="theme_button block_button add_to_cart">Add to cart</a>
									</p>
								</div>
							</article>
							<article class="vertical-item content-padding big-padding with_shadow text-center">
								<div class="item-media-wrap">
									<div class="item-media">
										<a href="shop-product.html"><img src="{{domaine}}/util/images/shop/04.jpg" alt=""/></a>
									</div>
								</div>
								<div class="item-content">
									<h3 class="entry-title">
										<a href="shop-product.html">T-Shirt</a>
									</h3>
									<div class="star-rating" title="Rated 3.0 out of 5">
										<span style="width:60%">
											<strong class="rating">3.0</strong>
											out of 5
										</span>
									</div>
									<div class="price">
										<span class="amount">$150.00</span>
									</div>
									<p class="topmargin_20">
										<a href="#" class="theme_button block_button add_to_cart">Add to cart</a>
									</p>
								</div>
							</article>
						</div>
					</div>
				</div>
				<!--eof .col-sm-8 (main content)-->
				<aside class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-md-pull-8 col-lg-pull-8 col-sm-offset-3 col-md-offset-0">
					<div class="widget widget_categories">
						<h3 class="widget-title">Categories</h3>
						<ul class="greylinks">
							<li>
								<a href="shop.html">Picanha turducken</a>
								<span>/ 34 /</span>
								<ul>
									<li>
										<a href="shop.html">Tail Meatball</a>
										<span>/ 15 /</span>
									</li>
									<li>
										<a href="shop.html">Sausage Beef</a>
										<span>/ 19 /</span>
									</li>
								</ul>
							</li>
							<li>
								<a href="shop.html">Jowl Corned</a>
								<span>/ 27 /</span>
								<ul>
									<li>
										<a href="shop.html">Pork Chop</a>
										<span>/ 15 /</span>
									</li>
									<li>
										<a href="shop.html">Beef Pork Loin</a>
										<span>/ 12 /</span>
									</li>
								</ul>
							</li>
							<li>
								<a href="#0">Ground Round</a>
								<span>/ 38 /</span>
							</li>
						</ul>
					</div>
					<div class="widget widget_shopping_cart">
						<h3 class="widget-title">{{ app.request.get('espace') ? "Template":"Panier" }}</h3>
						<div class="widget_shopping_cart_content">
							{% if not app.request.get('espace') %}
							<p class="total grey">
								<span>Prix unitaire:</span>
								<span class="price">{{template.price ?:  "69.94" }} XOF</span>
							</p>
							{% endif %}
							<p class="buttons">
								{% if not app.request.get('espace') and not app.user %}
									<a href="{{ path('app_cart_add', parameters = {'id': template.id, 'product':'cardonly', 'value': 50 }) }}" class="theme_button">
										<i class="fa fa-plus" aria-hidden="true"></i>
										<i class="fa fa-cart-arrow-down" aria-hidden="true"></i>
									</a>
								{% else %}
									<a href="{{ path('app_espaces_show', parameters = {'id': app.request.get('espace'), 'cardTemplate': template.id}) }}" class="theme_button">
										<i class="fa fa-check" aria-hidden="true"></i>
										Choisir cette carte
									</a>
								{% endif %}
								{# <a href="shop-cart.html" class="theme_button color1">Paiement</a> #}
							</p>
						</div>
					</div>
					<div class="widget widget_top_rated_products">
						<h3 class="widget-title">Top Products</h3>
						<ul class="media-list product_list_widget media_items_list">
							<li class="media">
								<a class="media-left media-middle" href="shop-product.html">
									<img class="media-object muted_background" src="{{domaine}}/util/images/shop/04.jpg" alt="">
								</a>
								<div class="media-body media-middle">
									<p class="darklinks">
										<a href="shop-product.html">Trainwreck</a>
									</p>
									<div class="star-rating  small-stars" title="Rated 4.00 out of 5">
										<span style="width:90%">
											<strong class="rating">4.00</strong>
											out of 5
										</span>
									</div>
									<div class="price">
										<span class="amount">$49.00</span>
									</div>
								</div>
							</li>
							<li class="media">
								<a class="media-left media-middle" href="shop-product.html">
									<img class="media-object muted_background" src="{{domaine}}/util/images/shop/05.jpg" alt="">
								</a>
								<div class="media-body media-middle">
									<p class="darklinks">
										<a href="shop-product.html">AK-47</a>
									</p>
									<div class="star-rating small-stars" title="Rated 3.00 out of 5">
										<span style="width:60%">
											<strong class="rating">3.00</strong>
											out of 5
										</span>
									</div>
									<div class="price">
										<del>
											<span class="amount">$125.00</span>
										</del>
										<ins>
											<span class="amount">$99.00</span>
										</ins>
									</div>
								</div>
							</li>
							<li class="media">
								<a class="media-left media-middle" href="shop-product.html">
									<img class="media-object muted_background" src="{{domaine}}/util/images/shop/06.jpg" alt="">
								</a>
								<div class="media-body media-middle">
									<p class="darklinks">
										<a href="shop-product.html">White Window</a>
									</p>
									<div class="star-rating  small-stars" title="Rated 2.00 out of 5">
										<span style="width:40%">
											<strong class="rating">2.00</strong>
											out of 5
										</span>
									</div>
									<div class="price">
										<del>
											<span class="amount">$46.00</span>
										</del>
										<ins>
											<span class="amount">$33.00</span>
										</ins>
									</div>
								</div>
							</li>
						</ul>
					</div>

					
				</aside>
			</div>
		</div>
	</section>
	
{% endblock %}
