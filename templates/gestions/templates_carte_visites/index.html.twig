{% extends 'base.html.twig' %}

{% block title %}TemplatesCarteVisites index{% endblock %}
{% block stylesheet %}
 	<link rel="stylesheet" type="text/css" href="assets/css/select2.min.css">
    <link rel="stylesheet" type="text/css" href="assets/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" type="text/css" href="assets/css/style.css">
{% endblock %}
{% block body %}
    <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-sm-4 col-3">
                        <h4 class="page-title">Modèles de carte de visite</h4>
                    </div>
                    <div class="col-sm-8 col-9 text-right m-b-20">
                        <a href="{{path('app_templates_carte_visites_new')}}" class="btn btn btn-primary btn-rounded float-right"><i class="fas fa-plus"></i>Ajouter un modèle</a>
                    </div>
                </div>
				<div class="row">
					<div class="col-md-12">
						<div class="table-responsive">
							<table class="table table-striped custom-table">
								<thead>
									<tr>
										<th style="width:10%;">Titres</th>
										<th>Descriptions</th>
										<th style="width:10%;">Commandes</th>
										<th style="width:10%;">Visibilité</th>
										<th class="text-right">Action</th>
									</tr>
								</thead>
								<tbody>
									{% for templates_carte_visite in templates_carte_visites %}
									<tr>
										<td>{{ templates_carte_visite.titres }}</td>
										<td>{{ templates_carte_visite.descriptions }}</td>
										<td>{{ templates_carte_visite.commandes }}</td>
										<td>{{ templates_carte_visite.visibilites ? '<span class="custom-badge status-success">Active</span>' : '<span class="custom-badge status-red">Inactive</span>' }}</td>
										<td class="text-right">
											<div class="dropdown dropdown-action">
												<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v"></i></a>
												<div class="dropdown-menu dropdown-menu-right">
													<a class="dropdown-item" href="edit-booking.html"><i class="fas fa-pencil-alt m-r-5"></i> Edit</a>
													<a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_appointment"><i class="fas fa-trash-alt m-r-5"></i> Delete</a>
												</div>
											</div>
										</td>
									</tr>
									{% else %}
										<tr>
											<td colspan="8">no records found</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
					</div>
                </div>
            </div>
            {{ include('notification.html.twig') }}
        </div>
		<div id="delete_appointment" class="modal fade delete-modal" role="dialog">
				<div class="modal-dialog modal-dialog-centered">
					<div class="modal-content">
						<div class="modal-body text-center">
							<img src="assets/img/sent.png" alt="" width="50" height="46">
							<h3>Are you sure want to delete this Appointment?</h3>
							<div class="m-t-20"> <a href="#" class="btn btn-white" data-dismiss="modal">Close</a>
								<button type="submit" class="btn btn-danger">Delete</button>
							</div>
						</div>
					</div>
				</div>
		</div>
{% endblock %}
 {% block javascripts %}
    <script src="{{domaine}}/assets/js/jquery.slimscroll.js"></script>
    <script src="{{domaine}}/assets/js/select2.min.js"></script>
	<script src="{{domaine}}/assets/js/moment.min.js"></script>
	<script src="{{domaine}}/assets/js/bootstrap-datetimepicker.min.js"></script>
{% endblock %}