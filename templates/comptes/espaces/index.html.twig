{% extends 'base-compte.html.twig' %}

{% block title %}Espaces index{% endblock %}

{% block body %}
    <h1>Espaces index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Noms</th>
                <th>DateCreations</th>
                <th>DateEcheance</th>
                <th>UnitesUssd</th>
                <th>Statut</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for espace in espaces %}
            <tr>
                <td>{{ espace.id }}</td>
                <td>{{ espace.noms }}</td>
                <td>{{ espace.dateCreations ? espace.dateCreations|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ espace.dateEcheance ? espace.dateEcheance|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ espace.unitesUssd }}</td>
                <td>{{ espace.statut ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_espaces_show', {'id': espace.id}) }}">show</a>
                    <a href="{{ path('app_espaces_edit', {'id': espace.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_espaces_new') }}">Create new</a>
{% endblock %}
